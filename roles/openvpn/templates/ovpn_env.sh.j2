# {{ ansible_managed }}

declare -x OVPN_CN={{ fqdn }}
declare -x OVPN_COMP_LZO=0
declare -x OVPN_DEFROUTE=0
declare -x OVPN_DEVICE=tun
declare -x OVPN_DEVICEN=0
declare -x OVPN_DISABLE_PUSH_BLOCK_DNS=0
declare -x OVPN_DNS=1
declare -x OVPN_DNS_SERVERS=({% for dns_ip in dns_servers %}[{{ loop.index - 1 }}]="{{ dns_ip }}" {% endfor %})
declare -x OVPN_ENV=/etc/openvpn/ovpn_env.sh
declare -x OVPN_EXTRA_CLIENT_CONFIG=()
declare -x OVPN_EXTRA_SERVER_CONFIG=()
declare -x OVPN_KEEPALIVE='10 60'
declare -x OVPN_NAT=1
declare -x OVPN_PORT={{ openvpn_port }}
declare -x OVPN_PROTO=udp
declare -x OVPN_PUSH=()
declare -x OVPN_ROUTES=([0]="{{ vpn_subnet }}/{{ vpn_subnet_cidr }}")
declare -x OVPN_SERVER={{ vpn_subnet }}/{{ vpn_subnet_cidr }}
declare -x OVPN_SERVER_URL=udp://{{ fqdn }}
